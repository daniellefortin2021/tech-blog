<div class="post-list">
  {{#each posts as |post|}}
  <div>
    <article class="post">
      <div class="title">
        {{title}}
      </div>
      <div class="meta">
        Written by {{user.username}} on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </div>
  {{/each}}
</div>