<div class="post-list">
  {{#each posts as |post|}}
  <div>
    <article class="post container">
      <div class="title row">
          <div class="col-sm">
              <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
          </div>
        <div class="col-sm">
            <p class="author">Written by {{user.username}} on {{created_at}}</p>
        </div>
        
      </div>
      <div>
          <p class="card-body">{{content}}</p>
      </div>
      <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </div>
  {{/each}}
</div>